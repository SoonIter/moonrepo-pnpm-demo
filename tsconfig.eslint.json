{
  "extends": "./tsconfig.options.json",
  "compilerOptions": {
		"emitDeclarationOnly": false,
		"noEmit": true,
    "checkJs": true
  },
  "parserOptions": {
    "extraFileExtensions": [".mjs", ".cjs", ".js"]
  },
  "include": [
    "**/.eslintrc.js",
    "packages/*/src/**/*",
    "packages/*/tests/**/*",
    "packages/*/types/**/*",
    "packages/*/*",
    "apps/**/*",
    "scripts/**/*",
    "website/src/**/*",
    "website/*.js"
  ]
}
